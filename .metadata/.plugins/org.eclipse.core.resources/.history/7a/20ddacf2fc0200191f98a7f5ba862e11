package testyResty.test01;

import java.awt.Color;
import java.awt.image.BufferedImage;
import java.io.File;
import java.io.IOException;

import javax.ws.rs.GET;
import javax.ws.rs.Path;
import javax.ws.rs.PathParam;
import javax.ws.rs.Produces;
import javax.ws.rs.core.Response;
import javax.ws.rs.core.Response.ResponseBuilder;

@Path("/ballotGraph/{ballotId}")
public class MyResource {

    @GET
    @Produces("image/png")
    public Response getIt(@PathParam("ballotId") String ballotId) {
    	File file = null;
    	BufferedImage bi = null;
    	Plot plot = Plot.plot(Plot.plotOpts().
                title("TEST2").
                legend(Plot.LegendFormat.BOTTOM)).
                xAxis("x", Plot.axisOpts().
                        range(0, 5)).
                yAxis("y", Plot.axisOpts().
                        range(0, 5)).
                series("Data", Plot.data().
                                xy(1, 2).
                                xy(3, 4),
                        Plot.seriesOpts().
                                marker(Plot.Marker.DIAMOND).
                                markerColor(Color.GREEN).
                                color(Color.BLACK));
        try {
        	bi = plot.save2(ballotId, "png");
            plot.save(ballotId, "png");
            file = new File(ballotId + ".png");
        } catch (IOException e) {
            e.printStackTrace();
        }
        ResponseBuilder response = Response.ok((Object) bi);
        
        response.header("Content-Disposition",
                "attachment; filename=" + ballotId + ".png");
        return response.build();
    }
}
