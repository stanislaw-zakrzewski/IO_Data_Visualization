package testyResty.test01;

import java.awt.Color;
import java.io.File;
import java.io.IOException;
import java.net.MalformedURLException;
import java.net.URL;

import javax.ws.rs.GET;
import javax.ws.rs.Path;
import javax.ws.rs.PathParam;
import javax.ws.rs.Produces;
import javax.ws.rs.core.MediaType;

@Path("/ballotGraph/{ballotId}")
public class MyResource {

    @GET
    @Produces("image/png")
    public String getIt(@PathParam("ballotId") String ballotId) {
    	Plot plot = Plot.plot(Plot.plotOpts().
                title("TEST2").
                legend(Plot.LegendFormat.BOTTOM)).
                xAxis("x", Plot.axisOpts().
                        range(0, 5)).
                yAxis("y", Plot.axisOpts().
                        range(0, 5)).
                series("Data", Plot.data().
                                xy(1, 2).
                                xy(3, 4),
                        Plot.seriesOpts().
                                marker(Plot.Marker.DIAMOND).
                                markerColor(Color.GREEN).
                                color(Color.BLACK));
        try {
            plot.save(ballotId, "png");
            File file = new File(ballotId + ".png");
            return file.getAbsolutePath();
        } catch (IOException e) {
            e.printStackTrace();
        }
        /*try {
			return new File(ballotId + ".png").toURI().toURL();
		} catch (MalformedURLException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}*/
        return null;
    }
}
